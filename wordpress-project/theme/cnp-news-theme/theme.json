      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--lg)"
    },
    "css": ":root{--cnp-bg:#fff;--cnp-surface:#F8FAFC;--cnp-ink:#0B1220;--cnp-muted:#6B7280;--cnp-border:#E5E7EB;--cnp-primary:#1D4ED8;--cnp-accent:#10B981;--cnp-warn:#F59E0B;--cnp-danger:#DC2626;--cnp-bg-dark:#121212;--cnp-surface-dark:#1e1e1e;--cnp-text-dark:#e0e0e0;--cnp-muted-dark:#a0a0a0;--cnp-border-dark:#2a2a2a;--cnp-footer-dark:#3a3a3a}[data-theme='dark']{--cnp-bg:#121212;--cnp-surface:#1e1e1e;--cnp-ink:#e0e0e0;--cnp-muted:#a0a0a0;--cnp-border:#2a2a2a;--cnp-primary:#60A5FA;--cnp-accent:#34D399;--cnp-warn:#FBBF24;--cnp-danger:#F87171}@media (prefers-color-scheme:dark):not([data-theme]){--cnp-bg:#121212;--cnp-surface:#1e1e1e;--cnp-ink:#e0e0e0;--cnp-muted:#a0a0a0;--cnp-border:#2a2a2a;--cnp-primary:#60A5FA;--cnp-accent:#34D399;--cnp-warn:#FBBF24;--cnp-danger:#F87171}",
