      "core/paragraph": {
        "typography": {
          "fontSize": true,
          "lineHeight": true,
          "letterSpacing": true
        }
      },
      "core/quote": {
        "border": {
          "color": true,
          "style": true,
          "width": true
        },
        "spacing": {
          "padding": true
        },
        "typography": {
          "fontFamily": true,
          "fontSize": true,
          "fontStyle": true
        }
      },
      "core/pullquote": {
        "border": {
          "color": true,
          "style": true,
          "width": true
        },
        "spacing": {
          "padding": true
        },
        "typography": {
          "fontFamily": true,
          "fontSize": true,
          "fontStyle": true,
          "fontWeight": true
        }
      }
