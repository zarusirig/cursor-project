          "name": "XS"
        },
        {
          "size": "clamp(0.82rem, 0.72rem + 0.4vw, 0.875rem)",
          "slug": "sm",
          "name": "Small"
        },
        {
          "size": "clamp(0.95rem, 0.84rem + 0.5vw, 1rem)",
          "slug": "base",
          "name": "Base"
