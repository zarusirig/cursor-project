          "name": "2XL"
        },
        {
          "size": "clamp(1.85rem, 1.56rem + 1.3vw, 2.25rem)",
          "slug": "3xl",
          "name": "3XL"
        },
        {
          "size": "clamp(2.2rem, 1.9rem + 1.8vw, 3rem)",
          "slug": "4xl",
          "name": "4XL"
        },
        {
          "size": "clamp(2.6rem, 2.2rem + 2.2vw, 3.75rem)",
          "slug": "5xl",
          "name": "5XL"
