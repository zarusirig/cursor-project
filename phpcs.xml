<?xml version="1.0"?>
<ruleset name="CNP News WordPress Coding Standards">
    <description>PHP CodeSniffer configuration for CNP News</description>

    <!-- What to scan -->
    <file>./wordpress-project/theme/cnp-news-theme</file>
    <file>./wordpress-project/plugins/cnp-seo</file>
    <file>./wordpress-project/plugins/cnp-automation</file>

    <!-- Exclude patterns -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>

    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        <exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
    </rule>

    <!-- Check for PHP cross-version compatibility -->
    <config name="testVersion" value="8.0-"/>
    <rule ref="PHPCompatibility"/>

    <!-- Additional WordPress-specific rules -->
    <rule ref="WordPress.Security.EscapeOutput"/>
    <rule ref="WordPress.Security.NonceVerification"/>
    <rule ref="WordPress.Security.ValidatedSanitizedInput"/>
    <rule ref="WordPress.WP.I18n"/>

    <!-- Allow short open tags in templates (for readability) -->
    <rule ref="Generic.PHP.DisallowShortOpenTag">
        <exclude-pattern>*.html</exclude-pattern>
    </rule>

    <!-- Line length -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="180"/>
        </properties>
    </rule>

    <!-- Show progress and use colors -->
    <arg name="colors"/>
    <arg value="sp"/>

    <!-- Check for security issues -->
    <rule ref="WordPress.Security"/>

    <!-- Verify text domain -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="cnp-news"/>
                <element value="cnp-seo"/>
                <element value="cnp-automation"/>
            </property>
        </properties>
    </rule>
</ruleset>
